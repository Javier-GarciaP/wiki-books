---
import Search from "../../assets/Search.astro";
import Buy from "../../assets/Buy.astro";
import Book from "../../assets/Book.astro";
import User from "../../assets/User.astro";
import BookIcon from "../../assets/BookIcon.astro"
import Boton from "./Boton.astro";
---

<header class="w-screen border-b-2 border-gray-200 h-10 px-7 mt-2 mb-2 font-serif">
  <div class="flex justify-between items-center mx-4">
    <div class="flex items-center gap-1">
      <BookIcon/>
      <h3 class="font-bold">Wiki Books</h3>
    </div>
    <div class="sm:flex hidden">
      <div class="flex items-center gap-10">
        <div class="flex items-center gap-10">
          <a class="hover:underline" href="#">Explorar</a>
          <a class="hover:underline" href="#">Tu Perfil</a>
          <a class="hover:underline" href="#">Audio Libros</a>
        </div>
        <div class="md:flex hidden gap-1 items-center">
          <Boton>
            <Search />
          </Boton>
          <Boton>
            <Book />
          </Boton>
          <Boton>
            <Buy />
          </Boton>
          <Boton>
            <User />
          </Boton>
        </div>
        <div class="items-center">
          <img
            class="w-9 h-9 rounded-full object-fill"
            src="https://www.muyinteresante.com/wp-content/uploads/sites/5/2024/08/08/66b499bc46640.jpeg?resize=1140,760"
            alt="Albert Einstein Foto"
          />
        </div>
      </div>
    </div>
  </div>
</header>